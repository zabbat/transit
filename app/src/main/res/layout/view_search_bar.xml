<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="@dimen/search_bar_height"
              android:layout_marginEnd="@dimen/search_bar_vertical_margin"
              android:layout_marginLeft="@dimen/search_bar_vertical_margin"
              android:layout_marginRight="@dimen/search_bar_vertical_margin"
              android:layout_marginStart="@dimen/search_bar_vertical_margin"
              android:background="@color/search_bar_background"
              android:clickable="true"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            style="@style/search_bar_label"
            android:layout_width="@dimen/search_bar_label_width"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:text="@string/start_txt"
            />

        <TextView
            android:id="@+id/start_search"
            style="@style/search_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/search_bar_target_margin_end"
            android:layout_marginStart="@dimen/search_bar_target_margin_end"
            tools:text="2 Kilmaurs Terrace, Edinburgh EH16 5DR"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            style="@style/search_bar_label"
            android:layout_width="@dimen/search_bar_label_width"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:text="@string/end_txt"
            />

        <TextView
            android:id="@+id/end_search"
            style="@style/search_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/search_bar_target_margin_end"
            android:layout_marginStart="@dimen/search_bar_target_margin_end"
            tools:text="2 Kilmaurs Terrace, Edinburgh EH16 5DR"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/search_button"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:text="@string/search_txt"
            android:textColor="@color/colorPrimary"
            />
    </FrameLayout>

</LinearLayout>